<!-- Validation failure messages -->

<% if @jobapp.errors.any? %>
  <% @jobapp.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add new application</h1>
</div>
<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <form action="/create_jobapp" class="form-horizontal">
          <!-- Label and input for position -->
          <div class="form-group">
            <label for="position" class="col-sm-2 control-label">
              Position
            </label>
            <div class="col-sm-10">
              <input type="text" id="position" name="position" placeholder="e.g. 'marine biologist'" class="form-control" value="<%= @jobapp.position %>">
            </div>
          </div>
          <!-- Note: need need to change so that default is current company -->
          <!-- Label and input for company -->
          <div class="form-group">
             <label for="director_id" class="col-sm-2 control-label">
                Company
             </label>
             <div class="col-sm-10">
                <%= select_tag(:company_id, options_from_collection_for_select(Company.all, :id, :name), :class => "form-control") %>
                <dd>Can't find the company? <a href="http://localhost:3000/companies/new">Add it here!</a></dd>
             </div>
             
          </div>
          
          <!-- Label and input for interview_on -->
          <div class="form-group">
            <label for="interview_on" class="col-sm-2 control-label">
              Interview on
            </label>
            <div class="col-sm-10">
              <input type="text" id="interview_on" name="interview_on" placeholder="2015-01-01" class="form-control" value="<%= @jobapp.interview_on %>">
            </div>
          </div>

          <!-- Label and input for note -->
          <div class="form-group">
            <label for="note" class="col-sm-2 control-label">
              Notes
            </label>
            <div class="col-sm-10">
              <textarea id="note" name="note" placeholder="What's on your mind?" class="form-control" rows="3"><%= @jobapp.note %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Application" class="btn btn-success">
              or
              <a href="/jobapps">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
