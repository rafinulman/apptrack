<!-- Validation failure messages -->

<% if @contact.errors.any? %>
  <% @contact.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Contact</h1>
</div>
<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Get that spankin' new contact in here!!</h3>
      </div>
      <div class="panel-body">
        <form action="/create_contact" class="form-horizontal">
          <!-- Label and input for jobapp_id -->
          <div class="form-group">
            <label for="company_id" class="col-sm-2 control-label">
              Which app?
            </label>
            <div class="col-sm-10">
              <%= select_tag(:company_id, options_from_collection_for_select(@companies.all, :id, :name), :class => "form-control") %>
              <dd>Can't find the application? <a href="http://localhost:3000/jobapps/new">Add a new appliction here!</a></dd>
            </div>
          </div>


          <!-- Label and input for first_name -->
          <div class="form-group">
            <label for="first_name" class="col-sm-2 control-label">
              First name
            </label>
            <div class="col-sm-10">
              <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @contact.first_name %>">
            </div>
          </div>

          <!-- Label and input for last_name -->
          <div class="form-group">
            <label for="last_name" class="col-sm-2 control-label">
              Last name
            </label>
            <div class="col-sm-10">
              <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @contact.last_name %>">
            </div>
          </div>

          <!-- Label and input for email -->
          <div class="form-group">
            <label for="email" class="col-sm-2 control-label">
              Email
            </label>
            <div class="col-sm-10">
              <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @contact.email %>">
            </div>
          </div>

          <!-- Label and input for phone -->
          <div class="form-group">
            <label for="phone" class="col-sm-2 control-label">
              Phone
            </label>
            <div class="col-sm-10">
              <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="<%= @contact.phone %>">
            </div>
          </div>

          <!-- Label and input for linkedin_url -->
          <div class="form-group">
            <label for="linkedin_url" class="col-sm-2 control-label">
              Linkedin url
            </label>
            <div class="col-sm-10">
              <input type="text" id="linkedin_url" name="linkedin_url" placeholder="Linkedin url" class="form-control" value="<%= @contact.linkedin_url %>">
            </div>
          </div>

          <!-- Label and input for notes -->
          <div class="form-group">
            <label for="notes" class="col-sm-2 control-label">
              Notes
            </label>
            <div class="col-sm-10">
              <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @contact.notes %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Contact" class="btn btn-success">
              or
              <a href="/contacts">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
