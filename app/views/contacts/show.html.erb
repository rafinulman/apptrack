<!-- Responsive panel example-->
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%=  @contact.first_name %> <%=  @contact.last_name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
               <h5>Company: <%=  @contact.jobapp.company.name %></h5>

            <dt>Email</dt>
            <dd><%=  @contact.email %></dd>

            <dt>Phone</dt>
            <dd><%=  @contact.phone %></dd>

            <dt>Notes</dt>
            <dd><%=  @contact.notes %>
            </dd>

            <% if  @contact.linkedin_url %>
              <dt>LinkedIn</dt>
              <dd><a href="<%= @contact.linkedin_url%>">Link</a></dd>
            <% end %>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/contacts" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_contact/<%= @contact.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
