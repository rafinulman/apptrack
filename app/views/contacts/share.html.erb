<div class="page-header">
  <h1>Share Contact</h1>
</div>
<div class="row">
  	<div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
  		<form action="/share_contact/<%=@contact.id%>" class="form-horizontal">
			<h3>Share <%=@contact.first_name%> <%=@contact.last_name%> with:</h3>
			<div class="col-sm-10">
	  			<%= select_tag(:id, options_from_collection_for_select(User.all, :id, :username), :class => "form-control") %>
			</div>
			<input type="submit" value="Share contact" class="btn btn-success">
			<a href="/contacts">Cancel</a>
		</form>
	</div>
</div>



